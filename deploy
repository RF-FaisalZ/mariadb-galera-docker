#!/bin/bash
CurrentFolder=$(pwd)

cd maxscale
docker-compose down
cd ../galera
docker-compose down
cd ..

echo "y" | docker volume prune

sleep 3

cd galera
docker-compose up --detach --build
cd ..

sleep 3

cd maxscale
docker-compose up --detach --build

docker container exec dcg1 bash -c "mariadb -uroot < /tmp/init/01.sql"
docker container exec drg1 bash -c "mariadb -uroot < /tmp/init/01.sql"

cd ${CurrentFolder}